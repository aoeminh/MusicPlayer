<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add_song"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:title="@string/title_toolbar_add_songs"
        app:titleTextColor="@color/white"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_add_song_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_add_song" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_to_play_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:text="@string/add_to_playlist"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn_add_song_fragment"/>

</RelativeLayout>
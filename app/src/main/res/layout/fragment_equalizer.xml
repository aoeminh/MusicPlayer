<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  >
    <androidx.appcompat.widget.Toolbar android:id="@+id/toolbar_equalizer"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="center"
        android:background="@color/transparent"
        app:title="@string/equalizer"
        app:titleTextColor="@color/white" />

    <androidx.appcompat.widget.AppCompatSpinner android:id="@+id/spinner_equalizer"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:paddingStart="@dimen/_10sdp"
        android:popupBackground="@drawable/background2"/>
    <LinearLayout
        android:id="@+id/container_equalizer_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"/>
</LinearLayout>